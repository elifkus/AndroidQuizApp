<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.safkanyazilim.quizapp.QuestionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/questionText"
            android:layout_weight="0.25"
            android:text="Dünyanın şekli nasıldır?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.60">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yuvarlak"
                android:id="@+id/choiceAButton"
                android:layout_weight="0.25" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kare"
                android:id="@+id/choiceBButton"
                android:layout_weight="0.25"
                android:checked="false" />

            <RadioButton
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:text="Tepsi"
                android:id="@+id/choiceCButton"
                android:layout_weight="0.25"
                android:checked="false" />

            <RadioButton
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="Geoid"
                android:id="@+id/choiceDButton"
                android:layout_weight="0.25"
                android:checked="false" />
        </RadioGroup>

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Cevapla"
            android:id="@+id/answerButton"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:onClick="answerQuestion" />
    </LinearLayout>
</RelativeLayout>
